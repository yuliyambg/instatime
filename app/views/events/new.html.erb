<h2>New Event</h2>

<div>
  <%= form_for @event, html: { multipart: true }  do |f| %>
    <div>
    <%= f.label :images %>
    <%#= f.file_field :image %>
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </div>
    <div>
      <%= f.label :is_public, "public ?" %>
      <%= f.check_box(:is_public) %>
    </div>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description%>
    <br>
    <%= f.submit %>
  <% end %>
</div>